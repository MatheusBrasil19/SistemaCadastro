<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/vermelho"
  >

    <TextView
        android:id="@+id/cadastro"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="40dp"
        android:background="@color/black"
        android:gravity="center"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:text="Cadastro de usuário"
        android:textColor="@color/azul"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/txtPreencha"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="180dp"
        android:background="@color/black"
        android:paddingLeft="20dp"
        android:paddingTop="10dp"
        android:text="Preencha os dados abaixo:"
        android:textColor="@color/azul"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtNome"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/txtPreencha"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:paddingTop="10dp"
        android:text="Nome:"
        android:textColor="@color/azul"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtEndereco"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edtNome"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:paddingTop="10dp"
        android:text="Endereço:"
        android:textColor="@color/azul"
        android:textSize="20dp" />

    <EditText
        android:id="@+id/edtTelefone"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/edtEndereco"
        android:background="@color/black"
        android:paddingLeft="60dp"
        android:paddingTop="10dp"
        android:text="Telefone:"
        android:textColor="@color/azul"
        android:textSize="20dp" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edtTelefone"
        android:layout_marginStart="120dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/azul"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:text="Cadastrar" />

    <Button
        android:id="@+id/btnCancelar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnCadastrar"
        android:layout_marginStart="120dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="120dp"
        android:backgroundTint="@color/black"
        android:textColor="@color/azul"
        android:paddingTop="25dp"
        android:paddingBottom="25dp"
        android:text="Cancelar" />

</RelativeLayout>